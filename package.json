{
    "private": true,
    "name": "devdocs-desktop",
    "version": "0.7.2",
    "description": "A desktop client for devdocs.io.",
    "author": {
        "name": "G'lek Tarssza",
        "email": "glek@glektarssza.com",
        "url": "https://glektarssza.com"
    },
    "contributors": [
        {
            "name": "EGOIST",
            "email": "0x142857@gmail.com",
            "url": "https://github.com/egoist"
        }
    ],
    "license": "MIT",
    "main": "app/index.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "test": "echo 'No tests defined!' && exit 0",
        "lint": "npm run lint:eslint && npm run lint:prettier",
        "lint:prettier": "prettier --config-path .prettierrc.cjs --ignore-path .prettierignore --ignore-path .gitignore --check ./app/",
        "lint:eslint": "eslint ./app/",
        "app": "DEBUG=devdocs-desktop:* electron app/index.js",
        "pack": "electron-builder  --dir",
        "dist": "electron-builder",
        "release": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/egoist/devdocs-desktop.git"
    },
    "keywords": [
        "devdocs",
        "app",
        "electron"
    ],
    "bugs": {
        "url": "https://github.com/egoist/devdocs-desktop/issues"
    },
    "homepage": "https://github.com/egoist/devdocs-desktop#readme",
    "type": "commonjs",
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "base64-js": "^1.5.1",
        "dotenv": "^17.2.2",
        "electron-builder": "^26.0.12",
        "electron-devtools-installer": "^4.0.0",
        "electron-notarize": "^1.2.2",
        "electron": "^38.2.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint": "^9.36.0",
        "globals": "^16.4.0",
        "prettier": "^3.6.2"
    },
    "build": {
        "appId": "sh.egoist.devdocs",
        "productName": "DevDocs",
        "compression": "maximum",
        "asar": true,
        "dmg": {
            "sign": false
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "win": {
            "target": [
                "nsis",
                "zip",
                "portable"
            ]
        },
        "nsis": {
            "oneClick": false
        },
        "linux": {
            "synopsis": "DevDocs desktop app",
            "category": "Development",
            "target": [
                "AppImage",
                "deb",
                "tar.xz"
            ]
        }
    }
}
